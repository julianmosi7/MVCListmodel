             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls"
             mc:Ignorable="d" Height="307.958" Width="175.133">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ListBox Name="listBox" Grid.Row="0" SelectionChanged="listBox_SelectionChanged"></ListBox>
        <Label Name="lblIdList" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" DataContextChanged="lblIdList_DataContextChanged" ></Label>
        
    </Grid>
